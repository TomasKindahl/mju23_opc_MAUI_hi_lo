<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="mju23_opc_MAUI_hi_lo.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">

            <Label
                Text="Hi-Lo: gissa talet"
                SemanticProperties.HeadingLevel="Level1"
                FontSize="32"
                HorizontalOptions="Center" />

            <Label
                x:Name="MessageText"
                Text="Gissa talet"
                SemanticProperties.HeadingLevel="Level2"
                SemanticProperties.Description="Gissa talet"
                FontSize="18"
                HorizontalOptions="Center" />

            <Editor
                x:Name="Guess"
                Text=""
                />

            <Button
                x:Name="GuessBtn"
                Text="Gissa!"
                SemanticProperties.Hint="Gissar talet"
                Clicked="OnGuessClicked"
                HorizontalOptions="Center" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
